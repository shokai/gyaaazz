!!! XHTML
%html
  %head
    %title= @title
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/fonts-3.1.1.css", :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/reset-3.1.1.css", :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/edit.css", :type => 'text/css'}
  %body
    %div.container
      %div#header
        %h1= @title
      %div#main
        %div#edit
          %ul
            - for name in @pages
              %li
                %a{:href => "#{app_root}/#{name}"} #{name}